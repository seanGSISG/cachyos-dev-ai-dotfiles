{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "WebFetch(domain:github.com)",
      "WebSearch",
      "Bash",
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/user-prompt-submit-hook.sh \"$CLAUDE_CODE_PROMPT\"",
            "timeout": 5
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/tool-use-hook.sh \"$CLAUDE_CODE_TOOL_NAME\" \"$CLAUDE_CODE_TOOL_PARAMS\"",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
