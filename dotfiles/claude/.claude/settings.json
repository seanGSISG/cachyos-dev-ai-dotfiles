{
  "hooks": {
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/scripts/precompact-auto-context.py",
            "timeout": 10
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude-code-docs/claude-docs-helper.sh hook-check"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/home/lsdmt/.claude-code-project-index/scripts/run_python.sh /home/lsdmt/.claude-code-project-index/scripts/i_flag_hook.py",
            "timeout": 20
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/home/lsdmt/.claude-code-project-index/scripts/run_python.sh /home/lsdmt/.claude-code-project-index/scripts/stop_hook.py",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "python3 ~/.claude/scripts/update-continue-work.py",
            "timeout": 10
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/ccline/ccline",
    "padding": 0
  },
  "enabledPlugins": {
    "api-scaffolding@claude-code-workflows": true,
    "python-development@claude-code-workflows": true
  },
  "alwaysThinkingEnabled": false
}
