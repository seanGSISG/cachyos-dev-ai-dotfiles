{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/scripts/precompact-auto-context.py",
            "description": "Auto-generate CONTEXT_STATE.md before compact",
            "timeout": 10
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude-code-docs/claude-docs-helper.sh hook-check",
            "description": "Auto-suggest /docs for documentation queries"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/home/lsdmt/.claude-code-project-index/scripts/run_python.sh /home/lsdmt/.claude-code-project-index/scripts/i_flag_hook.py",
            "description": "Project index -i flag support",
            "timeout": 20
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/home/lsdmt/.claude-code-project-index/scripts/run_python.sh /home/lsdmt/.claude-code-project-index/scripts/stop_hook.py",
            "description": "Project index cleanup on stop",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
